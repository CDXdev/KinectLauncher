<Window x:Class="KMouse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KMouse"
        mc:Ignorable="d"
        Title="Fruit Ninja on Kinect Launcher" Height="450" Width="800"
        Loaded="Window_Loaded" Unloaded="Window_Unloaded">
    <Grid>
        <TextBlock Name="Status" Text="KinectStatus : OFF" FontSize="30"></TextBlock>
        <Button Name="LaunchButton" IsEnabled="False" HorizontalAlignment="Center" VerticalAlignment="Center" Click="LaunchGame" Padding="10">Play Fruit Ninja on Kinect</Button>
    </Grid>
</Window>
